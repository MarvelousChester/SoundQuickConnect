<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SoundQuickConnect.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
     <TrayIcon.Icons>
         <TrayIcons>
             <TrayIcon Icon="/Assets/Logo.ico" 
                       ToolTipText="Logo">
                 <TrayIcon.Menu>
                     <NativeMenu>
                        <NativeMenuItem Header="Quick Connect" Click="NativeMenuItem_OnClick"></NativeMenuItem>
                     </NativeMenu>
                 </TrayIcon.Menu>
             </TrayIcon>
         </TrayIcons>
     </TrayIcon.Icons>
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SoundQuickConnect.MainWindow"
        Title="SoundQuickConnect">

        <StackPanel Margin="20">
                <TextBlock Margin="0 5">Paired Devices</TextBlock>
                <ListBox x:Name="bluetoothDevicesListBox"/>
                <Button x:Name="refreshBtn">Refresh</Button>
                <Button x:Name="connectBtn">Connect</Button>
                <Button x:Name="addQuickMenuBtn">Add</Button>
                <ListBox x:Name="quickConnectListBox"></ListBox>
        </StackPanel>

</Window>

